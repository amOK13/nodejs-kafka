{
  "name": "nodejs-kafka",
  "version": "1.0.0",
  "description": "Node.js + Kafka project with TypeScript",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "prebuild": "npm run lint",
    "build": "tsc",
    "start:producer": "node dist/producer/index.js",
    "start:consumer": "node dist/consumer/index.js",
    "producer": "npm run build && npm run start:producer",
    "consumer": "npm run build && npm run start:consumer",
    "dev:producer": "NODE_ENV=development ts-node src/producer/index.ts",
    "dev:consumer": "ts-node src/consumer/index.ts",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit-only": "jest --testPathIgnorePatterns=integration.test.ts",
    "test:utils": "jest src/utils/",
    "test:utils:watch": "jest src/utils/ --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts --format=verbose",
    "docker:build": "docker build -t nodejs-kafka .",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:producer": "docker-compose -f docker/docker-compose.yml exec producer sh",
    "docker:consumer": "docker-compose -f docker/docker-compose.yml logs -f consumer",
    "clear-topic": "npm run build && node dist/utils/clearTopic.js",
    "dev:clear-topic": "NODE_ENV=development ts-node src/utils/clearTopic.ts",
    "check-topic": "npm run build && node dist/utils/checkTopic.js",
    "dev:check-topic": "NODE_ENV=development ts-node src/utils/checkTopic.ts",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run type-check && npm run test:unit",
    "fix": "npm run lint:fix && npm run format"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "kafka",
    "kafkajs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "kafkajs": "^2.2.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^6.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
